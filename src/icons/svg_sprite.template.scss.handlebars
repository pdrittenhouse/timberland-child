@mixin icon-{{ base }}($width: {{ width.inner }}px, $height: {{ height.inner }}px, $color: #000, $display: inline-block) {
    display: $display;
    background-image: svg-url('{{{svg}}}');
    background-size: contain;
    background-repeat: no-repeat;
    height: $height;
    width: $width;
    background-position: center;
}

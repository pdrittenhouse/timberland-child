// Utility Classes
{{#shapes}}
.icon-{{ base }} {
    @include icon-{{ base }};
}

// Colorized Utility Classes
// Loop over every color in $c-palette and create a CSS class to colorize it
@each $name, $variantList in $c-palette {
  @each $variant in map-keys($variantList) {
    @if ($variant == 'base') {
        .icon-{{ base }}-#{"" + $name} {
            @include icon-{{ base }}($color: #{c($name)});
        }
    } @else {
        .icon-{{ base }}-#{"" + $name}-#{$variant} {
            @include icon-{{ base }}($color: #{c($name, $variant)});
        }
    }
  }
}

